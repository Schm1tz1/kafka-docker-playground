    echo

  else
    printf "playground debug testssl - 🔐 Testing TLS/SSL encryption using https://testssl.sh/\n"
    echo

  fi

  printf "%s\n" "$(bold "== Usage ==")"
  printf "  playground debug testssl [ARGUMENTS]\n"
  printf "  playground debug testssl --help | -h\n"
  echo

  # :command.long_usage
